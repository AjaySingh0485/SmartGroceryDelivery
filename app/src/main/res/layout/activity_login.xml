<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Activitys.LoginActivity">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:scrollbars="none">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/login_back"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:src="@drawable/splash_logo" />


                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="DELIVERY EXECUTIVE LOGIN"
                    android:textColor="@color/gradienttwo"
                    android:textSize="22dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold"></TextView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">





                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="CountryCode"
                        android:textColor="@color/fontcolor"
                        android:textSize="14dp"
                        android:textStyle="bold"></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/linear_layout_border_white_bg"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:visibility="visible">


                        <Spinner
                            android:id="@+id/spinner_issue"
                            android:layout_width="match_parent"
                            android:entries="@array/array_countries"
                            android:layout_height="40dp"
                            android:background="@null"
                            android:layout_centerHorizontal="true"
                            />


                    </LinearLayout>



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Mobile"
                        android:textColor="@color/fontcolor"
                        android:textSize="14dp"
                        android:textStyle="bold"></TextView>
                    <EditText
                        android:id="@+id/login_edit_email"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/linear_layout_border_white_bg"
                        android:hint="Enter Mobile "
                        android:inputType="number"
                        android:text=""
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:maxLength="10"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/fontcolor"
                        android:textColorHint="@color/hintcolor"
                        android:textSize="14dp">


                    </EditText>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Password"
                        android:textColor="@color/fontcolor"
                        android:textSize="14dp"
                        android:textStyle="bold"></TextView>
                    <EditText
                        android:id="@+id/login_edit_password"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/linear_layout_border_white_bg"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:paddingLeft="5dp"
                        android:text=""
                        android:paddingRight="5dp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/fontcolor"
                        android:textColorHint="@color/hintcolor"
                        android:textSize="14dp">


                    </EditText>



                    <Button
                        android:id="@+id/login_text"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/continew_background"
                        android:text="Login"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:textAllCaps="false"
                        android:textStyle="bold"></Button>



                    <TextView
                        android:id="@+id/forgot_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground"
                        android:text="FORGOT PASSWORD"
                        android:textColor="@color/gradienttwo"
                        android:textSize="14dp"
                        android:textAllCaps="false"
                        android:textStyle="normal">

                    </TextView>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>






