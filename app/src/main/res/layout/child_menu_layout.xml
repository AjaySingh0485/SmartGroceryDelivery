<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main">

<LinearLayout
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:background="@color/fontcolor"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:alpha="0.2"
        android:layout_height="1dp"/>

    <LinearLayout
        android:id="@+id/runing_view"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/runing"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/nav_header_desc"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:src="@drawable/running_icon" />

    <TextView
        android:id="@+id/runing_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="@string/menu_home"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:textColor="@color/fontcolor"
         />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/fontcolor"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:alpha="0.2"
        android:layout_height="1dp"/>
    <LinearLayout
        android:id="@+id/newassingend_view"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/newassingend"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/nav_header_desc"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:src="@drawable/assigned_icon" />

    <TextView
        android:id="@+id/newassingend_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="@string/menu_gallery"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/fontcolor"
        />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/fontcolor"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:alpha="0.2"
        android:layout_height="1dp"/>


    <LinearLayout
        android:id="@+id/deleverd_view"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/deleverd"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/nav_header_desc"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:src="@drawable/delivered_icon" />

    <TextView
        android:id="@+id/deleverd_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginTop="5dp"
        android:text="@string/menu_slideshow"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/fontcolor"
        />

    </LinearLayout>



</LinearLayout>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:elevation="5dp"
        android:layout_gravity="bottom"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="1dp"
        app:cardUseCompatPadding="true">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:gravity="center"
            android:alpha="0.4"
            android:textColor="@color/fontcolor"
            android:text="All rights reserved by MachineThinx Â© 2020">

        </TextView>
    </com.google.android.material.card.MaterialCardView>




</FrameLayout>