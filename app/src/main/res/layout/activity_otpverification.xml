<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        tools:context=".Activitys.OtpverificationActivity">


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="5dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scrollbars="none">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/login_back"
                        android:gravity="center"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:src="@drawable/splash_logo" />


                    </LinearLayout>


                    <TextView
                        android:id="@+id/verifly_otp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:text="VERIFY OTP"
                        android:textAllCaps="true"
                        android:textColor="@color/gradienttwo"
                        android:textSize="22dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textStyle="bold"></TextView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical">







                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/enter_otp_main"
                            android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="Enter OTP"
                            android:textColor="@color/fontcolor"
                            android:textSize="14dp"
                            android:textStyle="bold"></TextView>

                        <EditText
                            android:id="@+id/login_edit_otp"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/linear_layout_border_white_bg"
                            android:hint="Enter OTP"
                            android:inputType="number"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:maxLength="10"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/fontcolor"
                            android:textColorHint="@color/hintcolor"
                            android:textSize="14dp">


                        </EditText>


</LinearLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/password_main"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="Enter Password"
                                android:textColor="@color/fontcolor"
                                android:textSize="14dp"
                                android:textStyle="bold">

                            </TextView>

                            <EditText
                                android:id="@+id/edit_password"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/linear_layout_border_white_bg"
                                android:hint="Enter Password"
                                android:inputType="textPassword"
                                android:paddingLeft="5dp"
                                android:text=""
                                android:paddingRight="5dp"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/fontcolor"
                                android:textColorHint="@color/hintcolor"
                                android:textSize="14dp">


                            </EditText>







                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="Confirm Password"
                                android:textColor="@color/fontcolor"
                                android:textSize="14dp"
                                android:textStyle="bold">

                            </TextView>

                            <EditText
                                android:id="@+id/confirm_edit_password"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/linear_layout_border_white_bg"
                                android:hint="Enter Confrim Password"
                                android:inputType="textPassword"
                                android:paddingLeft="5dp"
                                android:text=""
                                android:paddingRight="5dp"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/fontcolor"
                                android:textColorHint="@color/hintcolor"
                                android:textSize="14dp">


                            </EditText>

                        </LinearLayout>










                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="ResendOTP"
                            android:textColor="@color/hintcolor"
                            android:textSize="14dp"
                            android:visibility="gone"
                            android:textStyle="bold"></TextView>



                        <Button
                            android:id="@+id/otp_text"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/continew_background"
                            android:text="Verify"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:textAllCaps="false"
                            android:textStyle="bold"></Button>


                        <Button
                            android:id="@+id/submit_text"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/continew_background"
                            android:text="Submit"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:textAllCaps="false"
                            android:textStyle="bold"></Button>



                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>







